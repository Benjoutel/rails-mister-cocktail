<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h1>New Cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.submit "Name", class: 'btn btn-primary' %>

      <% end %>

      <%= link_to "See all the cocktails", cocktails_path %>

    </div>
  </div>
</div>
